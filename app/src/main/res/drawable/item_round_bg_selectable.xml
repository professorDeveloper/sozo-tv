<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/netflix_focus_overlay" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/red" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/netflix_divider" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/red60" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/netflix_dark_gray" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
