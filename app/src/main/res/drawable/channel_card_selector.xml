<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/netflix_card_background" />
                    <corners android:radius="@dimen/tv_corner_radius" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="@dimen/tv_focus_border_width"
                        android:color="@color/netflix_focus_highlight" />
                    <corners android:radius="@dimen/tv_corner_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/netflix_background_secondary" />
            <stroke
                android:width="2dp"
                android:color="@color/netflix_red" />
            <corners android:radius="@dimen/tv_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/netflix_card_background" />
            <corners android:radius="@dimen/tv_corner_radius" />
        </shape>
    </item>
</selector>
