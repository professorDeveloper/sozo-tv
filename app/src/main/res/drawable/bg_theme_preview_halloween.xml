<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- base dark -->
    <item>
        <shape>
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#40FF9800" />
            <gradient
                android:angle="45"
                android:startColor="#09060F"
                android:centerColor="#130A1C"
                android:endColor="#241100" />
        </shape>
    </item>

    <!-- orange glow -->
    <item>
        <shape>
            <corners android:radius="12dp" />
            <gradient
                android:type="radial"
                android:centerX="0.55"
                android:centerY="0.45"
                android:gradientRadius="180dp"
                android:startColor="#33FF9800"
                android:endColor="#00FF9800" />
        </shape>
    </item>

</layer-list>
