<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PinWidget" />

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandle">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandleLeft">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandleRight">@drawable/pv_invisible_image</item>
    </style>

    <style name="AppTheme.Widget.Tv.Button" parent="Theme.Tv">
        <item name="android:background">@drawable/bg_button_tv</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@drawable/color_button_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Demo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.Material3.Dark">
        <item name="android:layout_height">wrap_content</item>
        <item name="windowActionBar">false</item>
        <item name="android:navigationBarColor">#00CF9090</item>
        <item name="android:textColor">@color/lb_tv_white</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NetflixSwitchTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/netflix_red</item>
        <item name="colorControlActivated">@color/netflix_red</item>
        <item name="colorSwitchThumbNormal">@color/netflix_white</item>
        <item name="android:colorForeground">@color/netflix_gray</item>
    </style>

    <style name="KeyboardKey">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/keyboard_key_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_item_tv_category_tv</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="KeyboardControlKey" parent="KeyboardKey">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/keyboard_control_key_selector</item>
    </style>

    <style name="NetflixSearchEditText">
        <item name="android:background">@drawable/netflix_search_background</item>
        <item name="android:textColor">@color/netflix_white</item>
        <item name="android:textColorHint">@color/netflix_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="NetflixTitle">
        <item name="android:textColor">@color/netflix_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NetflixSubtitle">
        <item name="android:textColor">@color/netflix_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NetflixItemTitle">
        <item name="android:textColor">@color/netflix_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NetflixItemSubtext">
        <item name="android:textColor">@color/netflix_gray</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>