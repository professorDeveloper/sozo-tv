<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/netflix_background_primary"
    android:fillViewport="true"
    android:descendantFocusability="beforeDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:scrollbars="none"
    tools:context=".presentation.screens.profile.MyAccountPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="40dp"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.02"
                android:text="My Account"
                android:textColor="@color/netflix_white"
                android:textSize="28sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01"
                android:text="Manage your profile and preferences"
                android:textColor="@color/netflix_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Main Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="24dp">

            <!-- Profile Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Avatar -->
                <LinearLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/netflix_avatar_bg"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/g"
                        android:textColor="@color/netflix_white"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Profile Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/guest"
                        android:textColor="@color/netflix_white"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Guest Account"
                        android:textColor="@color/netflix_gray"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Status + Messages -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <!-- Status -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:text="STATUS"
                        android:textColor="@color/netflix_gray"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/netflix_status_dot" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="Visitor"
                            android:textColor="@color/netflix_white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Messages -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:text="MESSAGES"
                        android:textColor="@color/netflix_gray"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="@string/_0_unread"
                        android:textColor="@color/netflix_white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/netflix_divider" />

            <!-- Content Mode -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Content Mode"
                        android:textColor="@color/netflix_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif"
                        android:text="Choose your preferred content type"
                        android:textColor="@color/netflix_gray"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/anime_mode_button"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/switch_background"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/days"
                            android:gravity="center"
                            android:stateListAnimator="@null"
                            android:text="Anime Mode"
                            android:textColor="@color/netflix_text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/movie_mode_button"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/switch_selected_background"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="Movie Mode"
                            android:textColor="@color/netflix_text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/netflix_divider" />


            <com.saikou.sozo_tv.components.TvDropdownSectionView
                android:id="@+id/subtitle_style_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:sectionTitle="Subtitle Style"
                app:sectionSubtitle="Customize subtitle font, color and size (TV friendly)"
                app:expanded="false">
                <LinearLayout
                    android:id="@+id/subtitle_style_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Subtitle Style"
                            android:textColor="@color/netflix_white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="sans-serif"
                            android:text="Customize subtitle font, color and size (TV friendly)"
                            android:textColor="@color/netflix_gray"
                            android:textSize="13sp" />

                        <!-- Preview Card -->
                        <LinearLayout
                            android:id="@+id/subtitle_preview_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:background="@drawable/netflix_focusable_background"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:padding="14dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:letterSpacing="0.08"
                                    android:text="Preview"
                                    android:textColor="@color/netflix_gray"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/subtitle_preview_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="This is how subtitles will look on TV"
                                    android:textColor="@color/netflix_white"
                                    android:textSize="16sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <!-- Font -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Font"
                            android:textColor="@color/netflix_white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/subtitle_font_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:orientation="horizontal">

                            <com.saikou.sozo_tv.components.TvOptionChipView
                                android:id="@+id/subtitle_font_default"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginEnd="6dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:selected="true"
                                android:text="Default"
                                android:textColor="@color/netflix_text_primary"
                                android:textSize="14sp" />

                            <com.saikou.sozo_tv.components.TvOptionChipView
                                android:id="@+id/subtitle_font_poppins"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginEnd="6dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:text="Poppins"
                                android:textColor="@color/netflix_text_primary"
                                android:textSize="14sp" />

                            <com.saikou.sozo_tv.components.TvOptionChipView
                                android:id="@+id/subtitle_font_days"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginEnd="6dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/days"
                                android:gravity="center"
                                android:text="Days"
                                android:textColor="@color/netflix_text_primary"
                                android:textSize="14sp" />

                            <com.saikou.sozo_tv.components.TvOptionChipView
                                android:id="@+id/subtitle_font_mono"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:fontFamily="monospace"
                                android:gravity="center"
                                android:text="Mono"
                                android:textColor="@color/netflix_text_primary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Text Size -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Text Size"
                            android:textColor="@color/netflix_white"
                            android:textSize="14sp" />

                        <com.saikou.sozo_tv.components.TvStepperView
                            android:id="@+id/subtitle_size_stepper"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginBottom="18dp"
                            app:initialValue="16"
                            app:maxValue="28"
                            app:minValue="12"
                            app:step="1"
                            app:unit="sp" />

                        <!-- Text Color -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Text Color"
                            android:textColor="@color/netflix_white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/subtitle_color_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:id="@+id/subtitle_color_white"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/tv_swatch_ring_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:padding="4dp"
                                android:selected="true"
                                >

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tv_swatch_fill"
                                    android:backgroundTint="@color/netflix_white" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/subtitle_color_orange"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/tv_swatch_ring_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:padding="4dp"
                                >

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tv_swatch_fill"
                                    android:backgroundTint="@color/orange" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/subtitle_color_gray"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/tv_swatch_ring_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:padding="4dp"
                                >

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tv_swatch_fill"
                                    android:backgroundTint="@color/netflix_gray" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/subtitle_color_green"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/tv_swatch_ring_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:padding="4dp"
                                >

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tv_swatch_fill"
                                    android:backgroundTint="@color/netflix_green" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/subtitle_color_red"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/tv_swatch_ring_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:padding="4dp"
                                >

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tv_swatch_fill"
                                    android:backgroundTint="@color/netflix_red" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/subtitle_color_blue"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/tv_swatch_ring_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:padding="4dp"
                                >

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tv_swatch_fill"
                                    android:backgroundTint="@color/cta_button_normal" />
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Subtitle Background -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Subtitle Background"
                            android:textColor="@color/netflix_white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/subtitle_bg_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:orientation="horizontal">

                            <com.saikou.sozo_tv.components.TvOptionChipView
                                android:id="@+id/subtitle_bg_off"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginEnd="6dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-medium"
                                android:selected="true"
                                android:text="Off"
                                android:textColor="@color/netflix_text_primary" />

                            <com.saikou.sozo_tv.components.TvOptionChipView
                                android:id="@+id/subtitle_bg_on"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-medium"
                                android:text="On"
                                android:textColor="@color/netflix_text_primary" />
                        </LinearLayout>

                        <!-- Outline -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Outline"
                            android:textColor="@color/netflix_white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/subtitle_outline_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.saikou.sozo_tv.components.TvOptionChipView
                                android:id="@+id/subtitle_outline_off"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginEnd="6dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-medium"
                                android:selected="true"
                                android:text="Off"
                                android:textColor="@color/netflix_text_primary" />

                            <com.saikou.sozo_tv.components.TvOptionChipView
                                android:id="@+id/subtitle_outline_on"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-medium"
                                android:text="On"
                                android:textColor="@color/netflix_text_primary" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.saikou.sozo_tv.components.TvDropdownSectionView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/netflix_divider" />

            <!-- Channel Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/channel_toggle_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/netflix_focusable_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/channel_list"
                            android:textColor="@color/netflix_white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/enable_or_disable_channel_content_visibility"
                            android:textColor="@color/netflix_gray"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/channel_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:theme="@style/NetflixSwitchTheme"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="4dp">

                    <View
                        android:id="@+id/channel_status_dot"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/netflix_status_dot_disabled" />

                    <TextView
                        android:id="@+id/channel_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Disabled"
                        android:textColor="@color/netflix_gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/netflix_divider" />

            <!-- NSFW Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/nsfw_toggle_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/netflix_focusable_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/adult_content_nsfw"
                            android:textColor="@color/netflix_white"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/enable_or_disable_adult_content_visibility"
                            android:textColor="@color/netflix_gray"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/nsfw_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:theme="@style/NetflixSwitchTheme"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="4dp">

                    <View
                        android:id="@+id/nsfw_status_dot"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/netflix_status_dot_disabled" />

                    <TextView
                        android:id="@+id/nsfw_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Disabled"
                        android:textColor="@color/netflix_gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
