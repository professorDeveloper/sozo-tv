<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:descendantFocusability="afterDescendants"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".presentation.screens.profile.MyAccountPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/accountBannerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/banner_round_bg"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:paddingHorizontal="20dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/bannerImageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:importantForAccessibility="no"
                android:padding="10dp"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/banner_scrim" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="26dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.02"
                    android:text="@string/my_account"
                    android:textColor="@color/netflix_white"
                    android:textSize="28sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.01"
                    android:text="@string/manage_your_profile_and_preferences"
                    android:textColor="@color/netflix_gray"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/realAvatar"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/netflix_avatar_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/avatarImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
                            app:srcCompat="@color/ic_launcher_background" />

                        <TextView
                            android:id="@+id/avatarInitials"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/g"
                            android:textColor="@color/netflix_white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profileNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/guest"
                            android:textColor="@color/netflix_white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/accountType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/guest_account"
                            android:textColor="@color/netflix_gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/loginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:background="@drawable/tv_theme_card_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:paddingHorizontal="18dp"
                        android:text="@string/login"
                        android:textColor="@color/netflix_white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1"
                            android:text="@string/status"
                            android:textColor="@color/netflix_gray"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/netflix_status_dot" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="@string/visitor"
                                android:textColor="@color/netflix_white"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1"
                            android:text="@string/notifications"
                            android:textColor="@color/netflix_gray"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/unreadCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="@string/_0_unread"
                            android:textColor="@color/netflix_white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="24dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/netflix_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/content_mode"
                        android:textColor="@color/netflix_white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/choose_your_preferred_content_type"
                        android:textColor="@color/netflix_gray"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/anime_mode_button"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/switch_background"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/days"
                            android:gravity="center"
                            android:stateListAnimator="@null"
                            android:text="@string/anime_mode"
                            android:textColor="@color/netflix_text_primary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/movie_mode_button"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/switch_selected_background"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="@string/movie_mode"
                            android:textColor="@color/netflix_text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@color/netflix_divider" />

            <com.saikou.sozo_tv.components.TvDropdownSectionView
                android:id="@+id/subtitleStyleDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:expanded="true"
                app:sectionSubtitle="@string/customize_subtitle_font_color_and_size_tv_friendly"
                app:sectionTitle="Subtitle Style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/subtitle_preview_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:background="@drawable/netflix_focusable_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:padding="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.08"
                                android:text="@string/preview"
                                android:textColor="@color/netflix_gray"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/subtitle_preview_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="@string/this_is_how_subtitles_will_look_on_tv"
                                android:textColor="@color/netflix_white"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/font"
                        android:textColor="@color/netflix_white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/subtitle_font_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal">

                        <com.saikou.sozo_tv.components.TvOptionChipView
                            android:id="@+id/subtitle_font_default"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text="Default"
                            android:textColor="@color/netflix_text_primary"
                            android:textSize="14sp" />

                        <com.saikou.sozo_tv.components.TvOptionChipView
                            android:id="@+id/subtitle_font_poppins"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:text="@string/poppins"
                            android:textColor="@color/netflix_text_primary"
                            android:textSize="14sp" />

                        <com.saikou.sozo_tv.components.TvOptionChipView
                            android:id="@+id/subtitle_font_days"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/days"
                            android:gravity="center"
                            android:text="@string/days"
                            android:textColor="@color/netflix_text_primary"
                            android:textSize="14sp" />

                        <com.saikou.sozo_tv.components.TvOptionChipView
                            android:id="@+id/subtitle_font_mono"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:fontFamily="monospace"
                            android:gravity="center"
                            android:text="Mono"
                            android:textColor="@color/netflix_text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Text Size"
                        android:textColor="@color/netflix_white"
                        android:textSize="14sp" />

                    <com.saikou.sozo_tv.components.TvStepperView
                        android:id="@+id/subtitle_size_stepper"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_marginBottom="18dp"
                        app:initialValue="16"
                        app:maxValue="28"
                        app:minValue="12"
                        app:step="1"
                        app:unit="sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Text Color"
                        android:textColor="@color/netflix_white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/subtitle_color_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/subtitle_color_white"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/tv_swatch_ring_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:padding="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/tv_swatch_fill"
                                android:backgroundTint="@color/netflix_white" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/subtitle_color_orange"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/tv_swatch_ring_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:padding="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/tv_swatch_fill"
                                android:backgroundTint="@color/orange" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/subtitle_color_gray"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/tv_swatch_ring_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:padding="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/tv_swatch_fill"
                                android:backgroundTint="@color/netflix_gray" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/subtitle_color_green"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/tv_swatch_ring_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:padding="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/tv_swatch_fill"
                                android:backgroundTint="@color/netflix_green" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/subtitle_color_red"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/tv_swatch_ring_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:padding="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/tv_swatch_fill"
                                android:backgroundTint="@color/netflix_red" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/subtitle_color_blue"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/tv_swatch_ring_selector"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:padding="4dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/tv_swatch_fill"
                                android:backgroundTint="@color/cta_button_normal" />
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Subtitle Background"
                        android:textColor="@color/netflix_white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/subtitle_bg_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:orientation="horizontal">

                        <com.saikou.sozo_tv.components.TvOptionChipView
                            android:id="@+id/subtitle_bg_off"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="Off"
                            android:textColor="@color/netflix_text_primary" />

                        <com.saikou.sozo_tv.components.TvOptionChipView
                            android:id="@+id/subtitle_bg_on"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="On"
                            android:textColor="@color/netflix_text_primary" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Outline"
                        android:textColor="@color/netflix_white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/subtitle_outline_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.saikou.sozo_tv.components.TvOptionChipView
                            android:id="@+id/subtitle_outline_off"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="Off"
                            android:textColor="@color/netflix_text_primary" />

                        <com.saikou.sozo_tv.components.TvOptionChipView
                            android:id="@+id/subtitle_outline_on"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-medium"
                            android:text="On"
                            android:textColor="@color/netflix_text_primary" />
                    </LinearLayout>

                </LinearLayout>
            </com.saikou.sozo_tv.components.TvDropdownSectionView>

            <com.saikou.sozo_tv.components.TvDropdownSectionView
                android:id="@+id/themeDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expanded="true"
                app:sectionSubtitle="Demo themes (no real color change)"
                app:sectionTitle="Theme">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.saikou.sozo_tv.components.TvToggleRowView
                        android:id="@+id/winterToggleRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="14dp"
                        app:subtitleText="Enable / disable Winter theme preview"
                        app:titleText="Winter mode (Surprise Me)" />


                </LinearLayout>
            </com.saikou.sozo_tv.components.TvDropdownSectionView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp" />

            <com.saikou.sozo_tv.components.TvDropdownSectionView
                android:id="@+id/contentControlsDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:expanded="false"
                app:sectionSubtitle="Manage what shows on Home"
                app:sectionTitle="Content &amp; Privacy">

                <com.saikou.sozo_tv.components.TvToggleRowView
                    android:id="@+id/mainHistoryToggleRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:subtitleText="@string/enable_or_disable_viewing_history_on_home_screen"
                    app:titleText="@string/history_manager" />


                <com.saikou.sozo_tv.components.TvToggleRowView
                    android:id="@+id/channelToggleRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:subtitleText="@string/enable_or_disable_channel_content_visibility"
                    app:titleText="@string/channel_list" />

                <com.saikou.sozo_tv.components.TvToggleRowView
                    android:id="@+id/nsfwToggleRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:subtitleText="@string/enable_or_disable_adult_content_visibility"
                    app:titleText="@string/adult_content_nsfw" />

            </com.saikou.sozo_tv.components.TvDropdownSectionView>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
