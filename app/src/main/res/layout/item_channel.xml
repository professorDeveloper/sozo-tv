<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/tv_card_width"
    android:layout_height="@dimen/tv_card_height"
    android:layout_margin="@dimen/tv_card_margin"
    android:background="@drawable/channel_card_selector"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/tv_padding_medium">


        <TextView
            android:id="@+id/tv_channel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="Channel Name"
            android:textColor="@color/netflix_text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_padding_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/live_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/live_indicator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textColor="@color/netflix_red"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_geo_blocked"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Geo-blocked"
                android:src="@drawable/ic_geo_blocked"
                android:visibility="gone"
                app:tint="@color/netflix_gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_channel_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Country â€¢ Language"
            android:textColor="@color/netflix_text_secondary"
            android:textSize="@dimen/tv_text_size_small" />

    </LinearLayout>

</FrameLayout>
