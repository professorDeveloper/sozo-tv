<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/skip_intro_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="68dp"
    android:background="#80000000"
    android:padding="12dp">

    <FrameLayout
        android:id="@+id/skip_intro_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_skip_button"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/skip_intro_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Skip Intro"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_double_arrow_right"
            android:tint="@color/white_and_black" />
    </FrameLayout>
</FrameLayout>