<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_exo_controller_tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@id/exo_controls_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#98000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <FrameLayout
        android:id="@+id/frameBackButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_play_circle"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:duplicateParentState="true"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_arrow_left"
            app:tint="@color/color_black_white_text" />
    </FrameLayout>

    <TextView
        android:id="@+id/film_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/days"
        android:paddingHorizontal="10dp"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/frameBackButton"
        app:layout_constraintEnd_toStartOf="@+id/epListContainer"
        app:layout_constraintStart_toEndOf="@+id/frameBackButton"
        app:layout_constraintTop_toTopOf="@+id/frameBackButton" />

    <FrameLayout
        android:id="@+id/epListContainer"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_play_pause_circle_bottom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="@id/frameBackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/frameBackButton">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:duplicateParentState="true"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_more_list"
            app:tint="@color/color_black_white_text" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/exo_bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/exo_thumbnail"
            android:layout_width="120dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toTopOf="@+id/exo_progress"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            tools:src="@drawable/gradient_back" />


        <view
            android:id="@id/exo_progress"
            class="com.saikou.sozo_tv.presentation.screens.play.TrailerPlayerScreen$ExtendedTimeBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/exo_play_paused"
            app:layout_constraintBottom_toTopOf="@id/exo_bottom_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:played_color="#FE4545"
            app:scrubber_color="#D31A1F" />


    </LinearLayout>
    <!-- Thumbnail ImageView -->

    <FrameLayout
        android:id="@id/exo_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:orientation="horizontal">

            <TextView
                android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="00:00:00" />

            <TextView
                android:id="@+id/tv_time_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Â·"
                android:textColor="#B3ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/exo_position"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B3ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_time_separator"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="00:00:00" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/exo_prev_container"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_play_pause_circle_bottom"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exo_prev_"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:padding="15dp"
                    app:srcCompat="@drawable/ic_previous"

                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/exo_prev_ten_container"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_play_pause_circle_bottom"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exo_prev_ten"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_prev_ten"

                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/exo_play_pause_container"
                android:layout_width="52dp"
                android:layout_height="52dp"

                android:layout_marginHorizontal="8dp"
                android:background="@drawable/shape_play_pause_circle_bottom"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exo_play_paused"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"

                    android:duplicateParentState="true"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_play"
                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/exo_next_ten_container"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_play_pause_circle_bottom"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exo_nex_ten"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_next_ten"
                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/exo_next_container"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:background="@drawable/shape_play_pause_circle_bottom"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exo_next_"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_next_ep"

                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/exo_quality"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/shape_play_settings"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/exo_settings"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:nextFocusUp="@id/exo_progress"
                    android:padding="14dp"
                    android:tint="@color/color_black_white_text"
                    app:srcCompat="@drawable/ic_hd_movie"
                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />

            </FrameLayout>

            <FrameLayout
                android:id="@id/exo_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/shape_play_settings"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusUp="@id/exo_progress"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:padding="6dp"
                    android:tint="@color/color_black_white_text"
                    app:srcCompat="@drawable/ic_settings"
                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />

            </FrameLayout>
        </LinearLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>