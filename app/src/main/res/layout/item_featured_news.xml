<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/tv_news_item_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="16dp">

    <View
        android:id="@+id/unreadIndicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/unread_indicator_dot"
        android:visibility="gone" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/actionIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/ic_notification_icon"
        app:tint="@color/red" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-medium"
            android:text="Watchlist Update"
            android:textColor="@color/notification_title_color"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/newsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:lineSpacingExtra="2dp"
            android:text="Your watchlist has been updated with 5 new releases. Don't miss out on the latest content."
            android:textColor="@color/notification_description_color"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/publishedTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_time_small"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="5 hours ago"
                android:textColor="@color/notification_time_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/actionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_action_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="update"
                android:textColor="@color/notification_action_color"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
