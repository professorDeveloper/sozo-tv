<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/bg_item_normal"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="14dp">

    <!-- Logo / Letter -->
    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginEnd="14dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvLetterLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_letter"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="V" />
    </FrameLayout>

    <!-- Nomi va info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/netflix_text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="VidEasy" />

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:textColor="@color/netflix_text_secondary"
            android:textSize="13sp"
            tools:text="English" />
    </LinearLayout>

    <!-- Badge -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/code_background"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="12dp"
        android:paddingVertical="5dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:text="VIDEASY" />

</LinearLayout>