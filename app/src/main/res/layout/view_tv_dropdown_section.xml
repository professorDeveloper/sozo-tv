<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/dropdown_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_dropdown_header_selector"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:minHeight="64dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dropdown_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/netflix_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dropdown_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/tv_badge_bg"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:textAllCaps="true"
                    android:textColor="@color/netflix_white"
                    android:textSize="11sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/dropdown_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/netflix_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/dropdown_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/netflix_text_secondary"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dropdown_chevron"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_chevron_down"
            android:tint="@color/netflix_gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dropdown_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_dropdown_content_bg"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="14dp"
        android:visibility="gone" />

</merge>
