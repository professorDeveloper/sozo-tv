<?xml version="1.0" encoding="utf-8"?>
<com.saikou.sozo_tv.components.SeasonalBackgroundLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.media3.ui.PlayerView
        android:id="@+id/trailer_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:show_timeout="0"
        app:use_controller="false"
        app:surface_type="texture_view" />


    <ImageView
        android:id="@+id/replace_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.saikou.sozo_tv.components.SeasonalBackgroundLayout
        android:layout_width="match_parent"
        android:id="@+id/seasonalBackground"
        android:layout_height="match_parent">
        <androidx.leanback.widget.VerticalGridView
            android:id="@+id/vgv_movie_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:focusableInTouchMode="true"
            app:focusOutEnd="true"
            app:focusOutFront="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_play_details_header" />

    </com.saikou.sozo_tv.components.SeasonalBackgroundLayout>
</com.saikou.sozo_tv.components.SeasonalBackgroundLayout>

