<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_exo_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@id/exo_controls_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#98000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />


    <FrameLayout
        android:id="@+id/frameBackButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_play_circle"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:duplicateParentState="true"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_arrow_left"
            app:tint="@color/color_black_white_text" />
    </FrameLayout>

    <TextView
        android:id="@+id/film_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/days"
        android:paddingHorizontal="10dp"
        android:textColor="#fff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/frameBackButton"
        app:layout_constraintStart_toEndOf="@+id/frameBackButton"
        app:layout_constraintTop_toTopOf="@+id/frameBackButton" />


    <TextView
        android:id="@+id/live_tv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:background="@drawable/live_tv_background"
        android:fontFamily="@font/days"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="@string/live_tv"
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/frameBackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frameBackButton" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/exo_bottom_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <view
            android:id="@id/exo_progress"
            class="com.saikou.sozo_tv.presentation.screens.play.TrailerPlayerScreen$ExtendedTimeBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/exo_play_paused"
            app:layout_constraintBottom_toTopOf="@id/exo_bottom_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:played_color="#FE4545"
            app:scrubber_color="#D31A1F" />


    </LinearLayout>
    <!-- Thumbnail ImageView -->

    <FrameLayout
        android:id="@id/exo_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="00:00:00" />

            <TextView
                android:id="@+id/tv_time_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Â·"
                android:textColor="#B3ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/exo_position"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B3ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_time_separator"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="00:00:00" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/exo_prev_ten_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_play_pause_circle_bottom"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exo_prev_ten"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_prev_ten"

                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/exo_play_pause_container"
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:layout_marginHorizontal="8dp"
                android:background="@drawable/shape_play_pause_circle_bottom"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exo_play_paused"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"

                    android:duplicateParentState="true"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_play"
                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/exo_next_ten_container"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_play_pause_circle_bottom"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exo_nex_ten"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:padding="12dp"
                    app:srcCompat="@drawable/ic_next_ten"
                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />
            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:orientation="horizontal"
            android:visibility="visible">


            <FrameLayout
                android:id="@+id/bookmarkBtn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/shape_play_settings"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/exo_settings"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exo_bookmark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:nextFocusUp="@id/exo_progress"
                    android:padding="12dp"
                    android:tint="@color/color_black_white_text"
                    app:srcCompat="@drawable/ic_bookmark"
                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />

            </FrameLayout>


            <FrameLayout
                android:id="@id/exo_settings"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/shape_play_settings"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:padding="8dp"
                    android:tint="@color/color_black_white_text"
                    app:srcCompat="@drawable/ic_settings"
                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/exo_fullscreenContainer"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:layout_marginBottom="4dp"
                android:background="@drawable/shape_play_settings"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/exo_fullscreen_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:duplicateParentState="true"
                    android:padding="8dp"

                    android:tint="@color/color_black_white_text"
                    app:srcCompat="@drawable/ic_round_fullscreen_24"
                    app:tint="@color/color_black_white_text"
                    app:tintMode="multiply" />

            </FrameLayout>
        </LinearLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
